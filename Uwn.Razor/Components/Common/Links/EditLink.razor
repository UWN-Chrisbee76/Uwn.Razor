@namespace Uwn.Razor.Components.Common.Links
@using Uwn.Razor.Models.ViewModels.Common.Links
@inherits UwnComponentWithRouteBase<EditLinkViewModel>

@if (ViewModel.IsVisible)
{
	<a id="@ViewModel.Id" class="@ViewModel.AdditionalClassNames" href="@ViewModel.RouteWithId">
		@if (IsFontAwesomeAvailable)
		{
			var icon = ViewModel.Content?.Icon ?? IconNames.ActionEdit;
			@FragmentProvider.BuildFontAwesomeFragment(icon, "me-1")
		}
		@if (ViewModel.Content?.Text is null)
		{
			<span>@GetTranslation("EditCommand")</span>
		}
		else
		{
			<span>@ViewModel.Content.Text</span>
		}
	</a>
}

@code {
	[Parameter] public string? Content { get; set; }

	protected override EditLinkViewModel BuildViewModelFromParameters()
		=> new()
		{
			Content = Content
		};
}