@attribute [Route(RouteStrings.ComponentsBootstrapAddNewButton)]
@namespace Uwn.Razor.Demo.Components.Components.Bootstrap.Alerts
@inherits PageBase<AddNewButtonViewModel>

<DemoContainer>
	<CodeContainer Language="Language.HTML">
&#60;AddNewButton AdditionalClassNames="@ViewModel.AdditionalClassNames"
              Content="@ViewModel.Content"
              Id="@ViewModel.Id"
              IdString="@ViewModel.IdString"
              IsVisible="@ViewModel.IsVisible"
              Route="@ViewModel.Route" /&#62;
	</CodeContainer>
	<AddNewButton Model="ViewModel" />
</DemoContainer>

<ComponentDescriptionContainer Description="A link with the visual style of a 'Add new' button."
							   Namespace="Uwn.Razor.Components.Bootstrap.Links"
							   InheritsType="@typeof(UwnComponentWithRouteBase<AddNewButtonViewModel>)"
							   InheritsRoute="@RouteStrings.ComponentsCommonUwnComponentWithRouteBase"
							   ViewModelRoute="@RouteStrings.ModelsViewModelsBootstrapAddNewButtonViewModel" />

<Table Purpose="TablePurpose.Editor">
	<TableHead>
		<PropertiesHeaderRow />
	</TableHead>
	<TableBody>
		<AdditionalClassNamesRow @bind-Value="ViewModel.AdditionalClassNames" />
		<ContentEditorRow @bind-Value="ViewModel.Content" />
		<IdRow @bind-Value="ViewModel.Id" />
		<IdStringRow @bind-Value="ViewModel.IdString" />
		<IsVisibleRow @bind-Value="ViewModel.IsVisible" />
		<RouteRow @bind-Value="ViewModel.Route" />
	</TableBody>
</Table>

@code {
	protected override void InitializeViewModel()
	{
		ViewModel.AdditionalClassNames = null;
		ViewModel.Content = "Content";
		ViewModel.Id = null;
		ViewModel.IdString = null;
		ViewModel.IsVisible = true;
		ViewModel.Route = string.Empty;
		// ViewModel.RouteWithId // readonly
	}
}