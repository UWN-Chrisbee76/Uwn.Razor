@namespace Uwn.Razor.Components.Common.Links
@using Uwn.Razor.Models.ViewModels.Common.Links
@inherits UwnComponentBase<ExternalLinkViewModel>

@if (ViewModel.IsVisible)
{
	<a id="@ViewModel.Id" class="external" href="@ViewModel.Href" target="_blank">
		@FragmentProvider.BuildFontAwesomeFragment(IconNames.IndicatorExternal, "fa-sm")
		@ChildContent
	</a>
}

@code {
	[Parameter] public RenderFragment? ChildContent { get; set; }
	[Parameter] public string Href { get; set; } = string.Empty;

	protected override ExternalLinkViewModel BuildViewModelFromParameters()
		=> new()
		{
			ChildContent = ChildContent,
			Href = Href
		};
}
