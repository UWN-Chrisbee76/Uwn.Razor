@namespace Uwn.Razor.Components.Bootstrap.Tables
@using Uwn.Razor.Models.ViewModels.Bootstrap.Tables
@inherits UwnComponentBase<TableFootViewModel>

@if (ViewModel.IsVisible)
{
	<tfoot id="@ViewModel.Id" class="@ClassNames @ViewModel.AdditionalClassNames">
		@ViewModel.ChildContent
	</tfoot>
}

@code {
	[Parameter] public RenderFragment? ChildContent { get; set; }
	[CascadingParameter] public TablePurpose Purpose { get; set; }

	protected string ClassNames
	{
		get
		{
			if (IsBootstrapAvailable)
				return Purpose switch
				{
					TablePurpose.Editor => "table-group-divider",
					_ => string.Empty,
				};
			else
				return string.Empty;
		}
	}

	protected override TableFootViewModel BuildViewModelFromParameters()
		=> new()
		{
			ChildContent = ChildContent
		};
}
